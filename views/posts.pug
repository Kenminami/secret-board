doctype html
html(lang="jp")
  head
    meta(charset="UTF-8")
    title SECRET BOARD
  body
    h1 SECRET BOARD
    a(href="/logout") Logout
    h2 POST
    form(method="post", action="/posts")
      div
        textarea(name="content", cols=40, rows=4)
      div
        button(type="submit") SEND!
    h2 INDEX
    each post in posts
      - var isPostedByAdmin = (post.postedBy === 'admin')
      if isPostedByAdmin
        h3 #{post.id} : ADMIN★
      else
        h3 #{post.id} : ID:#{post.trackingCookie}
      p #{post.content}
      p 投稿日時: #{post.createdAt}
      - var isAdmin = (user === 'admin')
      if isAdmin
        p 投稿者: #{post.postedBy}
      - var isDeletable = (user === post.postedBy || isAdmin)
      if isDeletable
        form(method="post", action="/posts?delete=1")
          input(type="hidden", name="id", value= `${post.id}`)
          button(type="submit") DEL
      hr